<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.Order" table="STORE_ORDER">
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="auto"/>
        </id>
        <property name="date" type="java.sql.Date">
            <column name="ORDER_DATE" not-null="true"/>
        </property>
        <property name="quantity" type="int">
            <column name="QUANTITY" not-null="true"/>
        </property>
        <many-to-one name="item" class="entity.Item"
                     column="ITEM_ID" not-null="true"
                     cascade="all"/>
        <set name="users" table="USER_ORDER"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ORDER_ID" not-null="true"/>
            </key>
            <many-to-many entity-name="entity.User">
                <column name="USER_ID" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>